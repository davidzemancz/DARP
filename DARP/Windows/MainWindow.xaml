<Window x:Class="DARP.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DARP"
        xmlns:vr="clr-namespace:DARP.Windows.ValidationRules"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="445*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="311*" />
            <ColumnDefinition Width="134*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0" VerticalAlignment="Stretch" Grid.ColumnSpan="4">
            <ToolBar Height="30">
                <Button Content="File"/>
            </ToolBar>
            <ToolBar Height="30">
                <Label Content="Maximal cords:"/>
                <TextBox x:Name="txtMaxCords" TextAlignment="Center" Width="70">
                    <Binding Path="MaxCords" UpdateSourceTrigger="PropertyChanged" >
                        <Binding.ValidationRules>   
                            <vr:CordsValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </ToolBar>
        </ToolBarTray>
        <TabControl Grid.Row="1" Grid.Column="0">
            <TabItem Header="Orders" Width="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ToolBarTray  Grid.Row="0" VerticalAlignment="Stretch" >
                        <ToolBar Height="30">
                            <Button Content="New random order" Click="newRandomOrder_Click"/>
                            <Button Content="Delete order"/>
                        </ToolBar>
                        <ToolBar Height="30">
                            <Button Content="Load orders"/>
                            <Button Content="Save orders"/>
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid Grid.Row="1" x:Name="dgOrders"/>
                </Grid>
            </TabItem>
            <TabItem Header="Vehicles" Width="100">
                <Grid>
                    <DataGrid x:Name="dgVehicles"/>
                </Grid>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Column="1" Grid.Row="1" Width="10" HorizontalAlignment="Stretch" />
        <TabControl Grid.Row="1"  Grid.Column="2" Grid.ColumnSpan="2">
            <TabItem Header="Plan" Width="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ToolBarTray  Grid.Row="0"  Height="30" >
                        <ToolBar Height="30">
                            <Button Content="Update plan"/>
                        </ToolBar>
                    </ToolBarTray>
                </Grid>
            </TabItem>
            <TabItem Header="Logs" Width="100">
                <Grid/>
            </TabItem>
        </TabControl>
        <ToolBar Grid.Row="2" Height="30">
            <!--<Label x:Name="lbSettingsStatus" Content="{Binding  Path=(Validation.Errors)[0].ErrorContent}" Width="200"/>-->
        </ToolBar>
    </Grid>

</Window>
