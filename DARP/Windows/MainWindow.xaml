<Window x:Class="DARP.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DARP.Windows"
        xmlns:vr="clr-namespace:DARP.Windows.ValidationRules"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" Loaded="Window_Loaded">
    <Window.DataContext>
        <local:MainWindowModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="445*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="311*" />
            <ColumnDefinition Width="134*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0" VerticalAlignment="Stretch" Grid.ColumnSpan="4">
            <ToolBar Band="1" Height="30">
                <Menu>
                    <MenuItem Header="_File">
                        <MenuItem Header="_Save" InputGestureText="Ctrl+S" Click="miSave_Click"/>
                        <MenuItem Header="_Open" InputGestureText="Ctrl+O" Click="miOpen_Click"/>
                    </MenuItem>
                </Menu>
            </ToolBar>
            <ToolBar Band="2" Height="30">
                <Label Content="Maximal cords:"/>
                <TextBox x:Name="txtMaxCords" TextAlignment="Center" Width="70">
                    <Binding Path="MaxCords" UpdateSourceTrigger="PropertyChanged" >
                        <Binding.ValidationRules>
                            <vr:CordsValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Label Content="Max delivery time since now (minutes):"/>
                <TextBox x:Name="txtMaxTimeMins" TextAlignment="Right" Width="50">
                    <Binding Path="MaxDeliveryTimeMins" UpdateSourceTrigger="PropertyChanged" >
                        <Binding.ValidationRules>
                            <vr:IntValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Label Content="Min time window (minutes):"/>
                <TextBox x:Name="txtMinTwMins" TextAlignment="Right" Width="50">
                    <Binding Path="MinTimeWindowMins" UpdateSourceTrigger="PropertyChanged" >
                        <Binding.ValidationRules>
                            <vr:IntValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Label Content="Max time window (minutes):"/>
                <TextBox x:Name="txtMaxTwMins" TextAlignment="Right" Width="50">
                    <Binding Path="MaxTimeWindowMins" UpdateSourceTrigger="PropertyChanged" >
                        <Binding.ValidationRules>
                            <vr:IntValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </ToolBar>
            <ToolBar Band="2" Height="30">
                <Label Content="Metric:"/>
                <ComboBox Width="100" SelectedIndex="{Binding Metric}">
                    <ComboBoxItem>Manhattan</ComboBoxItem>
                    <ComboBoxItem>Euclidean</ComboBoxItem>
                </ComboBox>
                <Label Content="Insertion method:"/>
                <ComboBox Width="100" SelectedIndex="{Binding InsertionMethod}">
                    <ComboBoxItem>First fit</ComboBoxItem>
                    <ComboBoxItem>Best fit</ComboBoxItem>
                </ComboBox>

            </ToolBar>
            <ToolBar Band="2" Height="30">
                <Label Content="Seed:"/>
                <TextBox x:Name="txtSeed" TextAlignment="Right" Width="100">
                    <Binding Path="Seed" UpdateSourceTrigger="PropertyChanged" >
                        <Binding.ValidationRules>
                            <vr:IntValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Button x:Name="btnResetRnd" Background="CornflowerBlue"  Content="Reset random generator" Click="btnResetRnd_Click"/>
            </ToolBar>
            <ToolBar Band="3" Height="30">
                <Label Content="Update plan each (minutes):"/>
                <TextBox x:Name="txtReplanIntervalMins" TextAlignment="Right" Width="100">
                    <Binding Path="ReplanIntervalMins" UpdateSourceTrigger="PropertyChanged" >
                        <Binding.ValidationRules>
                            <vr:IntValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Label Content="New order each (minutes):"/>
                <TextBox x:Name="txtNewOrderIntervalMins" TextAlignment="Right" Width="100">
                    <Binding Path="NewOrderIntervalMins" UpdateSourceTrigger="PropertyChanged" >
                        <Binding.ValidationRules>
                            <vr:IntValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Button x:Name="btnRunSimulation" Background="CornflowerBlue" Content="Run simulation" Click="btnRunSimulation_Click"/>
            </ToolBar>
           
        </ToolBarTray>
        <TabControl Grid.Row="1" Grid.Column="0">
            <TabItem Header="Orders" Width="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ToolBarTray  Grid.Row="0" VerticalAlignment="Stretch" >
                        <ToolBar Height="30">
                            <Button Background="CornflowerBlue"  Content="New random orders" Click="newRandomOrder_Click"/>
                            <TextBox x:Name="txtNewOrdersCount" TextAlignment="Right" Width="30">
                                <Binding Path="NewOrdersCount" UpdateSourceTrigger="PropertyChanged" >
                                    <Binding.ValidationRules>
                                        <vr:IntValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox>
                        </ToolBar>
                        <ToolBar Height="30">
                            <Button Content="Load orders"/>
                            <Button Content="Save orders"/>
                        </ToolBar>
                    </ToolBarTray>
                    <DataGrid Grid.Row="1" x:Name="dgOrders"/>
                </Grid>
            </TabItem>
            <TabItem Header="Vehicles" Width="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ToolBarTray  Grid.Row="0" VerticalAlignment="Stretch" >
                        <ToolBar Height="30">
                            <Button Background="CornflowerBlue"  Content="New random vehicle" Click="btwNewRandomVehicle_Click"/>
                            <Label Content="Speed:"/>
                            <TextBox TextAlignment="Right" Width="50">
                                <Binding Path="VehicleSpeed" UpdateSourceTrigger="PropertyChanged" >
                                    <Binding.ValidationRules>
                                        <vr:IntValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox>
                        </ToolBar>

                    </ToolBarTray>
                    <DataGrid  Grid.Row="1"  x:Name="dgVehicles"/>
                </Grid>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Column="1" Grid.Row="1" Width="10" HorizontalAlignment="Stretch" />
        <TabControl Grid.Row="1"  Grid.Column="2" Grid.ColumnSpan="2">
            <TabItem Header="Plan" Width="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <ToolBarTray  Grid.Row="0"  Height="30" >
                        <ToolBar Height="30">
                            <Label Content="Current time (minutes)"/>
                            <Label Content="{Binding CurrentTime}"/>
                            <Button Background="CornflowerBlue"  Content="Tick" Click="btnTick_Click"/>
                            <Button Background="CornflowerBlue"  Content="Update plan" Click="btnUpdatePlan_Click"/>
                        </ToolBar>
                    </ToolBarTray>
                    <StackPanel Grid.Row="1" x:Name="planRoutesStack">
                    </StackPanel>
                    <ToolBarTray  Grid.Row="2"  Height="30" >
                        <ToolBar Height="30">
                            <Label Content="Total distance"/>
                            <Label Content="{Binding CurrentTime}"/>
                        </ToolBar>
                    </ToolBarTray>
                </Grid>
            </TabItem>
            <TabItem Header="Logs" Width="100">
                <Grid>
                    <TextBox x:Name="txtLog" TextWrapping="Wrap" AcceptsReturn="True" Text="" IsReadOnly="True"/>
                </Grid>
            </TabItem>
        </TabControl>
        <ToolBar Grid.Row="2" Height="30">
            <!--<Label x:Name="lbSettingsStatus" Content="{Binding  Path=(Validation.Errors)[0].ErrorContent}" Width="200"/>-->
        </ToolBar>
    </Grid>

</Window>
