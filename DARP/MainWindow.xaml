<Window x:Class="DARP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DARP"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToolBarTray Height="30" Grid.ColumnSpan="2">
            <ToolBar Height="30">
                <Button Content="File"/>
            </ToolBar>
            <ToolBar Height="30">
                <Button Content="Orders"/>
            </ToolBar>
        </ToolBarTray>
        <Canvas x:Name="canvas"  Margin="10,10,10,10" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="84,48,0,0" Grid.Row="2" VerticalAlignment="Top" Width="96"/>
    </Grid>

</Window>
